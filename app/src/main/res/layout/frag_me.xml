<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/details"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_190"
                android:scaleType="fitXY"
                android:src="@drawable/home_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/img_head"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_marginStart="@dimen/dp_22"
                        android:scaleType="fitXY"
                        android:src="@drawable/timg"
                        app:riv_corner_radius="@dimen/dp_30"
                        app:riv_mutate_background="true" />

                    <!--<ImageView-->
                        <!--android:id="@+id/img_head"-->
                        <!--android:layout_width="@dimen/dp_60"-->
                        <!--android:layout_height="@dimen/dp_60"-->
                        <!--android:layout_marginLeft="@dimen/dp_22"-->
                        <!--android:layout_marginStart="@dimen/dp_22"-->
                        <!--android:scaleType="fitXY"-->
                        <!--android:src="@drawable/timg"-->
                   <!--/>-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginStart="@dimen/dp_18"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="..."
                            android:textColor="@color/Write"
                            android:textSize="@dimen/sp_24" />

                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:text="ID：1212454545454"
                            android:textColor="@color/Write"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_shar"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50">

                        <ImageView
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_22"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_10"
                            android:src="@drawable/add" />


                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_22"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lin_wallet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_23"
                            android:layout_marginStart="@dimen/dp_23"
                            android:src="@drawable/qianbao" />

                        <TextView

                            android:id="@+id/text_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_10"
                            android:text="0.00元"
                            android:textColor="@color/Write"
                            android:textSize="@dimen/sp_20" />


                    </LinearLayout>


                    <View
                        android:layout_width="@dimen/dp_2"
                        android:layout_height="@dimen/dp_18"
                        android:background="@color/Write" />


                    <LinearLayout
                        android:id="@+id/lin_share"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_22"
                            android:layout_marginEnd="@dimen/dp_23"
                            android:layout_marginRight="@dimen/dp_23"
                            android:background="@color/Write"
                            android:gravity="center_vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_22"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:layout_marginStart="@dimen/dp_5"
                                android:gravity="center"
                                android:text="分享达人二维码"
                                android:textColor="@color/black33"
                                android:textSize="@dimen/sp_10" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_162"
            android:background="@drawable/backdetails"

            android:orientation="horizontal">

            <!--android:elevation="@dimen/dp_1"-->

            <LinearLayout
                android:id="@+id/lin_behalf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/daifukaun" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="代付款"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_not_used"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/weishiyong" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="未使用"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_Used"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/daifukaun" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="已使用"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>





            <LinearLayout
                android:id="@+id/lin_pingjia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/aas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="待评价"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/lin_refund"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tuikaun" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="退款"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


    <!--android:elevation="@dimen/dp_1"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/backdetails"

        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/lin_Merchant"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:scaleType="fitXY"
                android:src="@drawable/shanghuzhongxin" />

            <View
                android:layout_width="@dimen/dp_12"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商户中心"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:src="@drawable/youjian" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/order_back" />


        <LinearLayout
            android:id="@+id/lin_Daren"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:scaleType="fitXY"
                android:src="@drawable/daren" />

            <View
                android:layout_width="@dimen/dp_12"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="达人招募"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:src="@drawable/youjian" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/order_back" />

        <LinearLayout
android:id="@+id/lin_Profit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:scaleType="fitXY"
                android:src="@drawable/wodeshouyi" />

            <View
                android:layout_width="@dimen/dp_12"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收益"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:src="@drawable/youjian" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/order_back" />


        <LinearLayout
            android:id="@+id/lin_information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:scaleType="fitXY"
                android:src="@drawable/geren" />

            <View
                android:layout_width="@dimen/dp_12"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:src="@drawable/youjian" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/order_back" />


        <LinearLayout
            android:id="@+id/lin_Set_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:scaleType="fitXY"
                android:src="@drawable/shezhi" />

            <View
                android:layout_width="@dimen/dp_12"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:src="@drawable/youjian" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/order_back" />


    </LinearLayout>


</LinearLayout>