<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/all_background"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.YunleHui.ui.act.actme.ActAddCard">


    <include layout="@layout/toolbar_push_off"/>



    <LinearLayout
android:background="@color/Write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:text="持卡人"
            android:textColor="@color/black33"
            android:textSize="@dimen/sp_18" />


        <EditText
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入姓名"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_14"
        android:background="@color/all_background" />


    <LinearLayout
        android:background="@color/Write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:text="卡号"
            android:textColor="@color/black33"
            android:textSize="@dimen/sp_18" />


        <EditText
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入银行卡"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_14"
        android:background="@color/all_background" />


    <LinearLayout
        android:background="@color/Write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:text="电话号码"
            android:textColor="@color/black33"
            android:textSize="@dimen/sp_18" />


        <EditText
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入电话号码"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>



<TextView
    android:id="@+id/text_Agree"
    android:clickable="true"
    android:textSize="@dimen/sp_16"
    android:textColor="@color/Write"
    android:gravity="center"
    android:text="同意用户协议并验证"
    android:layout_marginTop="@dimen/dp_28"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginStart="@dimen/dp_12"
    android:background="@drawable/button_img"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44" />






</LinearLayout>
