<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_background"
    android:orientation="vertical"
    tools:context=".ui.act.refund.ActRefund">

    <include layout="@layout/toolbar_push_off" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/lin_tuikuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@drawable/backdetails"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16">


                <!--<ImageView-->
                <!--android:src="@drawable/icon_choose"-->
                <!--android:layout_width="@dimen/dp_22"-->
                <!--android:layout_height="@dimen/dp_22" />-->


                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/lan" />


                <TextView
                    android:textStyle="bold"
                    android:id="@+id/text_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="退款申请提交成功"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/sp_18" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@color/back_ground" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_9"
                android:text="退款信息"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@color/back_ground" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_11"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shangpu" />

                <TextView
                    android:id="@+id/text_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重庆齐美口腔"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/sp_17" />

            </LinearLayout>

<!--爆款的列表-->
            <LinearLayout
                android:id="@+id/lin_refund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/dp_77"
                    android:layout_height="@dimen/dp_77"
                    android:scaleType="fitXY"
                    android:src="@drawable/timg" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_context"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lines="2"
                        android:text="..."
                        android:textColor="@color/black33"
                        android:textSize="@dimen/sp_16" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_gravity="bottom"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="共"
                            android:textColor="@color/black99"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_gravity="bottom"
                            android:id="@+id/text_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/black99"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_gravity="bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="件商品"
                            android:textColor="@color/black99"
                            android:textSize="@dimen/sp_13" />


                        <TextView
                            android:layout_gravity="bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  ￥"
                            android:textColor="@color/black99"
                            android:textSize="@dimen/sp_13" />


                        <TextView
                            android:id="@+id/text_price_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textColor="@color/black99"
                            android:textSize="@dimen/sp_13" />


                    </LinearLayout>


                </LinearLayout>




                    <LinearLayout
                  android:gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="￥"
                            android:textColor="@color/black33"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/text_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textColor="@color/black33"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_9"
                            android:layout_marginLeft="@dimen/dp_9"
                            android:text="X"
                            android:textColor="@color/corlor_text"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/corlor_text"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>





            </LinearLayout>



            <!--社区购列表-->


            <com.example.YunleHui.view.NoScrollListView
                android:divider="@null"
                android:id="@+id/no_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <LinearLayout
                android:layout_marginTop="@dimen/dp_12"
                android:id="@+id/lin_cs"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/black99"
                    android:textSize="@dimen/sp_13"
                    android:text="共"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_sizee"
                    android:textColor="@color/black99"
                    android:textSize="@dimen/sp_13"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/black99"
                    android:textSize="@dimen/sp_13"
                    android:text="件商品"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginStart="@dimen/dp_50"
                    android:textColor="@color/black99"
                    android:textSize="@dimen/sp_13"
                    android:text="￥"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_prices"
                    android:textColor="@color/black99"
                    android:textSize="@dimen/sp_13"
                    android:text="0.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>



        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@drawable/backdetails"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_9"
                android:text="退款进度"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_18" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@color/back_ground" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <com.example.YunleHui.view.NoScrollListView
                        android:id="@+id/list_fund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:overScrollMode="never"
                        android:scrollbars="none" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_30"
            android:background="@drawable/backsdetails"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="@dimen/dp_12"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款金额："
                    android:textColor="@color/black99"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/text_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="."
                    android:textColor="@color/shop_corlor"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_12"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款原因"
                    android:textColor="@color/black99"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/text_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="."
                    android:textColor="@color/shop_corlor"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_9"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请时间"
                    android:textColor="@color/black99"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/text_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="."
                    android:textColor="@color/shop_corlor"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>