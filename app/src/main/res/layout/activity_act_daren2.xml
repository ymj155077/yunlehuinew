<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/darenbeijing"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_finsh"
            android:layout_gravity="start"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <ImageView

                android:id="@+id/back_tool"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:src="@drawable/toolbar_back" />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_140"
            android:text="招募达人赚佣金"
            android:textColor="@color/Write"
            android:textSize="@dimen/sp_30" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/bacmg">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_29"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_21"
                android:layout_marginStart="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_2"
                android:gravity="center"
                android:text="除了吃喝玩乐的还能赚佣金"
                android:textColor="@color/daren"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_33"
            android:background="@drawable/bacmg"
            android:gravity="center_horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/xuxian"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_29"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="如何招募"
                    android:textColor="@color/daren"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <LinearLayout

                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                    <TextView
                        android:gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="①"
                        android:textColor="#3DA5CC"
                        android:textSize="@dimen/sp_30" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_6"
                        android:lines="2"
                        android:text="复制下方“链接”或保存“邀请海报”发送给好友 下载云享优汇APP"
                        android:textColor="@color/daren"
                        android:textSize="@dimen/sp_14" />



                </LinearLayout>



                <LinearLayout
                    android:layout_marginBottom="@dimen/dp_6"

                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                    <TextView
                        android:gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="②"
                        android:textColor="#3DA5CC"
                        android:textSize="@dimen/sp_30" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_6"
                        android:lines="2"
                        android:text="下载后好友识别或扫描“分享达人二维码”注册 成为达人"
                        android:textColor="@color/daren"
                        android:textSize="@dimen/sp_14" />



                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/bacmg"
            android:gravity="center_horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/xuxian"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_29"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="达人有那些福利"
                    android:textColor="@color/daren"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />


                <LinearLayout

                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                    <TextView
                        android:gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="①"
                        android:textColor="#3DA5CC"
                        android:textSize="@dimen/sp_30" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_6"
                        android:lines="2"
                        android:maxEms="11"
                        android:text="达人购买平台商品即可获得相 应的佣金"
                        android:textColor="@color/daren"
                        android:textSize="@dimen/sp_14" />



                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="@dimen/dp_6"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                    <TextView
                        android:gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="②"
                        android:textColor="#3DA5CC"
                        android:textSize="@dimen/sp_30" />


                    <TextView
android:maxEms="15"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_6"
                        android:lines="2"
                        android:text="达人下级在平台购买商品也可获得相应 比例佣金"
                        android:textColor="@color/daren"
                        android:textSize="@dimen/sp_14" />



                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_26"
                android:layout_weight="1"
                android:background="@drawable/bacmg"
                android:gravity="center_horizontal">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/xuxian"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fuzhiliainjie" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_29"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center"
                        android:text="复制链接"
                        android:textColor="@color/daren"
                        android:textSize="@dimen/sp_14" />


                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="@dimen/dp_22"
                android:layout_height="1dp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_26"
                android:layout_weight="1"
                android:background="@drawable/bacmg"
                android:gravity="center_horizontal">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/xuxian"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/you" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_29"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center"
                        android:text="分享海报"
                        android:textColor="@color/daren"
                        android:textSize="@dimen/sp_14" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</ScrollView>
