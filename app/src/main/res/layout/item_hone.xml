<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linfood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/backimg"
        android:orientation="vertical">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:maxEms="10"
        android:id="@+id/text_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:ellipsize="end"
        android:lines="1"
        android:text="【渝中区】湫子美甲美睫半永久"
        android:textColor="@color/black33"
        android:textSize="@dimen/sp_18" />


    <TextView

        android:gravity="end"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="@dimen/sp_13"
        android:text="距我"
        android:layout_weight="1"
        android:textColor="@color/black99"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_juli"
        android:layout_marginEnd="@dimen/dp_12"
        android:gravity="end"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="@dimen/sp_13"
        android:text="距我"
        android:textColor="@color/black99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_12" />

</LinearLayout>




        <TextView
            android:id="@+id/text_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_2"
            android:ellipsize="end"

            android:lineSpacingMultiplier="1.2"
            android:lines="2"
            android:text="手部纯色美甲+2指跳色+贴画/钻+50次修眉+200元美睫 "
            android:textColor="@color/zhuce"
            android:textSize="@dimen/sp_16" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4">


            <ImageView

                android:background="@drawable/timg"
                android:id="@+id/img_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_138"
                android:scaleType="fitXY"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#12CA98"
                android:padding="@dimen/dp_6"
                android:text="热销中"
                android:textColor="@color/Write"
                android:textSize="@dimen/sp_12" />


        </FrameLayout>


        <LinearLayout
            android:layout_marginStart="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/dp_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#FE724E"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/price_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="#FE724E"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:id="@+id/text_peice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_17"
                android:layout_marginStart="@dimen/dp_5"
                android:text="原价 0.00"
                android:textColor="@color/black99"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:gravity="center_horizontal"
                android:layout_weight="1"
android:id="@+id/text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="销量 0"
                android:textColor="@color/black99"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:id="@+id/lin_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bancrile">

                <TextView
                    android:id="@+id/text_Commission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginStart="@dimen/dp_6"
                    android:padding="@dimen/dp_4"
                    android:text="佣金￥0"
                    android:textColor="#F14C4F"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="1dp" />


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baqsncrile">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_2"
                        android:padding="@dimen/dp_4"
                        android:text="立即购买"
                        android:textColor="@color/Write"
                        android:textSize="@dimen/sp_12" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>