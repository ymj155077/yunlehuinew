<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.YunleHui.ui.act.ActComPur.ActComMall">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="vertical">


            <include layout="@layout/toolbar_push_off" />



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <com.example.YunleHui.view.MyXrecycleview
                    android:id="@+id/xre_mall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants" />



<!--详情页-->
                <ScrollView
                    android:visibility="gone"
                    android:background="@color/Write"
                    android:id="@+id/scr_mall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scrollbars="none">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/img_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_187"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_marginEnd="@dimen/dp_12"
                            android:layout_marginBottom="@dimen/dp_12"
                           />


                        <TextView
                            android:id="@+id/text_shopname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_12"
                            android:text="万家水果店"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_17" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_marginBottom="@dimen/dp_7"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="@color/login"
                                android:textSize="@dimen/sp_17" />

                            <TextView
                                android:id="@+id/text_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textColor="@color/login"
                                android:textSize="@dimen/sp_24"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/text_yuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_4"
                                android:text="原价 0.00"
                                android:textColor="@color/black99"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_36"
                                android:text="月销   "
                                android:textColor="@color/black99"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/text_xiao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black99"
                                android:textSize="@dimen/sp_14" />


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_marginEnd="@dimen/dp_12"
                            android:background="@color/all_background" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="详细信息"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_17" />


                        <TextView
                            android:id="@+id/text_context"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_7"
                            android:layout_marginEnd="@dimen/dp_12"
                            android:lineSpacingExtra="@dimen/dp_4"
                            android:text="云南野生菌汇虾仁、干腰河肠、小菜汤、手工苞 谷粑包2-3人餐位费 套餐二：火焰鸡、来凤鱼 小菜汤、花甲、手工苞谷粑包3-5人"
                            android:textColor="@color/black99"
                            android:textSize="@dimen/sp_16" />





                        <LinearLayout
                            android:layout_marginEnd="@dimen/dp_16"
                            android:layout_marginBottom="@dimen/dp_100"
                            android:layout_marginTop="@dimen/dp_47"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_jian_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/jianhaohui" />


                            <TextView
                                android:id="@+id/text_number_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/dp_12"
                                android:layout_marginStart="@dimen/dp_12"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/zhuce"
                                android:textSize="@dimen/sp_24" />


                            <ImageView
                                android:id="@+id/img_add_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/jiahaoxuanzhong" />

                        </LinearLayout>







                        <!--加入购物车-->


                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/dp_47"
                            android:layout_marginEnd="@dimen/dp_17"
                            android:background="@drawable/baou">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_22"
                                android:layout_marginTop="@dimen/dp_6"
                                android:layout_marginEnd="@dimen/dp_22"
                                android:layout_marginBottom="@dimen/dp_6"
                                android:text="加入购物车"
                                android:textColor="@color/Write"
                                android:textSize="@dimen/sp_17" />

                        </LinearLayout>


                    </LinearLayout>


                </ScrollView>




            </FrameLayout>








        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin_mall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/lin_pop_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="#000000"
                android:clickable="true"
                android:orientation="vertical">


            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginBottom="@dimen/dp_13"
                    android:text="购物车"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_17" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/all_background" />


                <ListView
                    android:id="@+id/list_gou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:scrollbars="none" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/all_background" />

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>


    <LinearLayout
        android:id="@+id/lin_boom_gou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_9"
            android:layout_weight="1"
            android:background="@drawable/bamg"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_34"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:src="@drawable/he" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/bayou"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/text_Num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginEnd="@dimen/dp_3"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_10"
                        android:text="0"
                        android:textColor="@color/Write"
                        android:textSize="@dimen/sp_11" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_2"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/Write"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/text_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/Write"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="免费配送"
                    android:textColor="@color/Write"
                    android:textSize="@dimen/sp_11" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_ok"
            android:layout_width="@dimen/dp_110"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_9"
            android:background="@drawable/bamgyouno"
            android:gravity="center">
            <TextView
                android:id="@+id/text_jhj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0起送"
                android:textColor="@color/Write"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
