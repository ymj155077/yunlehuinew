<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:descendantFocusability="blocksDescendants"
android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/all_background"

 >


    <LinearLayout
        android:id="@+id/lin_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/backdetails"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:scaleType="fitXY"
                android:src="@drawable/shangpu" />


            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="圣诞节快乐可视对"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_17" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="代付款"
                android:textColor="@color/login"
                android:textSize="@dimen/sp_17" />

        </LinearLayout>


        <com.example.YunleHui.view.NoScrollListView

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:divider="@null"
            android:scrollbars="none"
            android:id="@+id/no_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
      />


        <!--爆款的列表-->

        <LinearLayout
            android:id="@+id/lin_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_12"
            android:focusable="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_shop"
                android:layout_width="@dimen/dp_82"
                android:layout_height="@dimen/dp_82"
                android:scaleType="fitXY"
                android:src="@drawable/timg" />


            <TextView
                android:id="@+id/text_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="3"
                android:text="热菜过江椒香鱼、秘制私家甲满汉菠萝 "
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:text="￥"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_9"
                android:text="X"
                android:textColor="@color/corlor_text"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/corlor_text"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/all_background" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_14"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共"
                android:textColor="@color/zhuce"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/text_boom_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/zhuce"
                android:textSize="@dimen/sp_16" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件商品"
                android:textColor="@color/zhuce"
                android:textSize="@dimen/sp_16" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   ￥"
                android:textColor="@color/login"
                android:textSize="@dimen/sp_16" />


            <TextView
                android:id="@+id/text_price_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="0.00"
                android:textColor="@color/login"
                android:textSize="@dimen/sp_16" />


            <LinearLayout
                android:id="@+id/lin_payment"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/order"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款"
                    android:textColor="#FF6C4B"
                    android:textSize="@dimen/sp_17" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>