<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/all_background"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.YunleHui.ui.act.actme.ActBinding">


<include layout="@layout/toolbar_push_off"/>



    <ImageView
        android:layout_marginTop="@dimen/dp_75"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/call_phone"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_160" />



    <LinearLayout
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black33"
            android:text="已绑定手机："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_phone"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black33"
            android:text="187*****750"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>





    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/corlor_text"
        android:text="绑定手机用于登录和支付验证"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

<View
    android:layout_weight="1"
    android:layout_width="1dp"
    android:layout_height="0dp"/>


<TextView
    android:id="@+id/text_replace"
    android:clickable="true"
    android:layout_marginBottom="@dimen/dp_140"
    android:layout_marginTop="@dimen/dp_104"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginStart="@dimen/dp_12"
    android:textSize="@dimen/sp_17"
    android:gravity="center"
    android:textColor="@color/Write"
    android:text="更换手机"
    android:background="@drawable/button_img"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_44" />



</LinearLayout>
