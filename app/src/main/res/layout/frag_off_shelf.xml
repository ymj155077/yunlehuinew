<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_33"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:background="@drawable/backim_g">


                <EditText
                    android:hint="  搜索核销商户"
                    android:id="@+id/edit_earch"
                    android:paddingEnd="@dimen/dp_30"
                    android:drawableEnd="@drawable/chacha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableLeft="@drawable/sousuo"
                    android:drawableStart="@drawable/sousuo"
                    android:paddingLeft="@dimen/dp_23"
                    android:paddingStart="@dimen/dp_23"
                    android:drawableRight="@drawable/chacha"
                    android:paddingRight="@dimen/dp_30" />


            </LinearLayout>



            <com.example.YunleHui.view.MyXrecycleview
                android:id="@+id/xre_shelf"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>










        </LinearLayout>





        <FrameLayout
            android:id="@+id/frag_chu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout

                android:id="@+id/lin_pop_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="#000000"
                android:orientation="vertical">


            </LinearLayout>








            <LinearLayout

                android:background="@drawable/backimg"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <LinearLayout
                    android:gravity="center"

                    android:layout_gravity="center"
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70">
                    <TextView
                        android:id="@+id/text_title"
                        android:textSize="@dimen/sp_16"
                        android:text="..."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>



                <View
                    android:background="@color/all_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>


                <LinearLayout

                    android:orientation="horizontal"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">


                    <TextView
                        android:id="@+id/text_cancel"
                        android:clickable="true"
                        android:gravity="center"
                        android:textSize="@dimen/sp_14"
                        android:text="取消"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />


                    <View
                        android:background="@color/all_background"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/text_sure"
                        android:clickable="true"
                        android:gravity="center"
                        android:textSize="@dimen/sp_14"
                        android:text="确定"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />


                </LinearLayout>





            </LinearLayout>


















        </FrameLayout>

    </FrameLayout>















</LinearLayout>