<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:id="@+id/lin_pop_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="#000000"
            android:orientation="vertical">


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/lin_frame"
                android:src="@color/Write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_22"
                android:layout_marginEnd="@dimen/dp_22">

                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_head"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_447"
                    android:scaleType="fitXY"
                    android:src="@drawable/ksks"
                    app:riv_corner_radius="@dimen/dp_10"
                    app:riv_mutate_background="true" />

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/cir_head"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_60"
                            android:scaleType="fitXY"
                            android:src="@drawable/timg"
                            app:riv_corner_radius="@dimen/dp_30"
                            app:riv_mutate_background="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="屁屁ss"
                                android:textColor="@color/Write"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="邀你加入云享优惠购物平台"
                                android:textColor="@color/Write"
                                android:textSize="@dimen/sp_18" />


                        </LinearLayout>


                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">


                        <ImageView
                            android:layout_width="@dimen/dp_252"
                            android:layout_height="@dimen/dp_252"
                            android:background="@drawable/backimg" />


                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/img_er"
                            android:layout_width="@dimen/dp_214"
                            android:layout_height="@dimen/dp_195"
                            android:layout_gravity="center"
                            android:background="@drawable/timg" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_6"
                        android:text="打开微信识别二维码"
                        android:textColor="@color/Write"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="开启你的优惠购物之旅"
                        android:textColor="@color/Write"
                        android:textSize="@dimen/sp_20" />

                </LinearLayout>

            </FrameLayout>


            <TextView
                android:id="@+id/textSave"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginStart="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_22"
                android:background="@drawable/backimg"
                android:clickable="true"
                android:gravity="center"
                android:text="保存图片"
                android:textColor="@color/login"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/text_Close"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginStart="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_22"
                android:background="@drawable/backimg"
                android:gravity="center"
                android:text="关闭"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_18" />


        </LinearLayout>


    </FrameLayout>

</LinearLayout>