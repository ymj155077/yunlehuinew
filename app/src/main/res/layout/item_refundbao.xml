<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Write"
    android:orientation="vertical">

    <TextView
        android:visibility="gone"
        android:textColor="@color/black33"
        android:gravity="center_vertical"
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:lineSpacingExtra="4dp"
        android:lineSpacingMultiplier="1"
        android:text="请输入商品名称"
        android:textSize="@dimen/sp_17" />


    <View
        android:background="@color/all_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>


    <TextView
        android:textColor="@color/black33"
        android:id="@+id/text_kkk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:gravity="top"
        android:lineSpacingExtra="4dp"
        android:lineSpacingMultiplier="1"
        android:minHeight="@dimen/dp_100"
        android:text="请输入套餐简介"
        android:textSize="@dimen/sp_17" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/xr_refund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:background="@color/Write"
        android:descendantFocusability="blocksDescendants" />

    <LinearLayout

        android:id="@+id/lin_Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/dp_50"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:text="价格"
            android:textColor="@color/black33"
            android:textSize="@dimen/sp_17" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_6"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/text_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原价￥0.00"
                    android:textColor="@color/black99"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@drawable/youjian" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/all_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_6"
        android:gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_RemoveItem"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_28"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@drawable/wallerxia"
            android:gravity="center">

            <TextView
                android:id="@+id/text_shan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                android:text="删除套餐"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin_addItem"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_28"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@drawable/wallerxia"
            android:gravity="center">


            <TextView
                android:id="@+id/text_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                android:text="添加套餐"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/all_background" />

</LinearLayout>