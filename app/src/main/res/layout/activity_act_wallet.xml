<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_background"
    android:orientation="vertical"
    tools:context="com.example.YunleHui.ui.act.actme.ActWallet">

    <include layout="@layout/toolbar_push_off" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/waller"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/Write"
                android:textSize="@dimen/sp_20" />


            <TextView
                android:id="@+id/text_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/Write"
                android:textSize="@dimen/sp_24" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_30"
            android:text="钱包余额（元）"
            android:textColor="@color/Write"
            android:textSize="@dimen/sp_13" />


        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout

android:visibility="invisible"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_30"

                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/Write"
                        android:textSize="@dimen/sp_18" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/Write"
                        android:textSize="@dimen/sp_18" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_30"
                    android:text="历史记录（元）"
                    android:textColor="@color/Write"
                    android:textSize="@dimen/sp_13" />


            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />


            <LinearLayout
                android:id="@+id/lin_tixian"
                android:layout_width="@dimen/dp_68"
                android:layout_height="@dimen/dp_28"
                android:background="@drawable/tixian"
                android:gravity="center">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现"
                    android:textColor="@color/Write"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>


            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="1dp" />


            <LinearLayout
                android:id="@+id/lin_Recharge"
                android:layout_width="@dimen/dp_68"
                android:layout_height="@dimen/dp_28"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/waller_"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingEnd="@dimen/dp_6"
                    android:paddingStart="@dimen/dp_6"
                    android:text="充值"
                    android:textColor="@color/login"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_zhangdan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zahngdan" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_weight="1"
            android:text="账单"
            android:textColor="@color/black33"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_6"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginStart="@dimen/dp_26" />


    <LinearLayout
        android:id="@+id/lin_jilu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chongzhi" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_weight="1"
            android:text="提现记录"
            android:textColor="@color/black33"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_6"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginStart="@dimen/dp_26" />


</LinearLayout>
