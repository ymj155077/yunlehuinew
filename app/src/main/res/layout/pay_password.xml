<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lin_pop_type"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:alpha="0.5"
        android:background="#000000"
        android:orientation="vertical">
    </LinearLayout>
<LinearLayout

    android:background="@color/Write"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:background="@color/Write"
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_30" />


    <TextView
        android:textSize="@dimen/sp_18"
        android:gravity="center_horizontal"
        android:text="请输入支付密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.example.YunleHui.view.widget.PasswordEditText



        android:id="@+id/passwordEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:bgColor="#666666"
        app:bgCorner="4dp"
        app:bgSize="2dp"
        app:divisionLineColor="#666666"
        app:divisionLineSize="2dp"
        app:passwordColor="@color/activity_cor"
        app:passwordRadius="4dp" />

</LinearLayout>



    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#ededed"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="1"
                android:textColor="#333"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="2"
                android:textColor="#333"
                android:textSize="18sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="3"
                android:textColor="#333"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="4"
                android:textColor="#333"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="5"
                android:textColor="#333"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="6"
                android:textColor="#333"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="7"
                android:textColor="#333"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="8"
                android:textColor="#333"
                android:textSize="18sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="9"
                android:textColor="#333"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#cecece"
                android:gravity="center"
                android:padding="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/item_number_bg"
                android:gravity="center"
                android:padding="16dp"
                android:text="0"
                android:textColor="#000" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_48"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#cecece"
                android:gravity="center"
                android:padding="4dp"
                android:src="@drawable/ic_delete"
                android:tint="#686868" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>