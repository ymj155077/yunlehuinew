<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/Write"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.YunleHui.ui.act.ActComPur.ActNearMer">

    
    
    <include layout="@layout/toolbar_push_off"/>
    
    
    <View
        android:background="@color/all_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"/>
    
    
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:scaleType="fitXY"
            android:src="@drawable/timg"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60" />


        <TextView
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_11"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_18"
            android:text="阳光100城市广场"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>



    <View
        android:background="@color/all_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>




 <LinearLayout
     android:id="@+id/lin_shop_center"
     android:layout_marginBottom="@dimen/dp_12"
     android:layout_marginTop="@dimen/dp_12"
     android:gravity="center_vertical"
     android:background="@color/Write"
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">


     <ImageView

         android:layout_marginStart="@dimen/dp_12"
         android:scaleType="fitXY"
         android:src="@drawable/timg"
         android:layout_width="@dimen/dp_82"
         android:layout_height="@dimen/dp_82" />


     <LinearLayout
         android:layout_marginEnd="@dimen/dp_9"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <LinearLayout

             android:layout_marginEnd="@dimen/dp_12"
             android:layout_marginStart="12dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:textColor="@color/black_333333"
                 android:textSize="@dimen/sp_17"
                 android:layout_weight="1"
                 android:text="玩家水果"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content" />


             <TextView
android:textColor="@color/black99"
                 android:text="距离0.75km"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />

         </LinearLayout>

         <LinearLayout
             android:layout_marginTop="@dimen/dp_12"
             android:layout_marginEnd="@dimen/dp_12"
             android:layout_marginStart="12dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
          >

             <TextView
                 android:textColor="@color/login"
                 android:textSize="@dimen/sp_16"
                 android:text="5分"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />

             <TextView
                 android:layout_marginEnd="@dimen/dp_6"
                 android:layout_marginStart="@dimen/dp_6"
                 android:textColor="@color/black99"
                 android:textSize="@dimen/sp_16"
                 android:text="5分"
                 android:layout_width="@dimen/dp_2"
                 android:layout_height="match_parent" />


             <TextView
                 android:textColor="@color/black99"
                 android:textSize="@dimen/sp_16"
                 android:text="月销"
                 android:layout_width="@dimen/dp_2"
                 android:layout_height="match_parent" />
             <TextView
                 android:layout_marginEnd="@dimen/dp_6"
                 android:layout_marginStart="@dimen/dp_6"
                 android:textColor="@color/black99"
                 android:textSize="@dimen/sp_16"
                 android:text="月销"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent" />

         </LinearLayout>

         <LinearLayout
             android:layout_marginStart="@dimen/dp_10"
             android:gravity="bottom"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <TextView
                 android:textColor="@color/black99"
                 android:textSize="@dimen/sp_14"
                 android:text="营业时间："
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
             <TextView
                 android:textColor="@color/black99"
                 android:textSize="@dimen/sp_14"
                 android:text="08：00 23：12"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />

         </LinearLayout>



     </LinearLayout>



 </LinearLayout>


    <View
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:background="@color/all_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    
    
    
    
    
    
    
</LinearLayout>
