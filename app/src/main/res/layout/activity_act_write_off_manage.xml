<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:background="@color/Write"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.YunleHui.ui.act.actme.actbusiness.ActWriteOffManage">


    <include layout="@layout/toolbar_push_off" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/all_background" />



<LinearLayout
    android:layout_marginTop="@dimen/dp_30"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_head"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginStart="@dimen/dp_26"
        android:scaleType="fitXY"
        android:src="@drawable/timg"
        app:riv_corner_radius="@dimen/dp_10"
        app:riv_mutate_background="true" />


    <TextView
        android:layout_marginStart="@dimen/dp_12"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_17"
        android:text="魏启玲"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>


    <LinearLayout
        android:id="@+id/lin_saomiao"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginEnd="@dimen/dp_26"
        android:background="@drawable/aaller_a"
        android:gravity="center">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描订单二维码核销"
            android:textColor="@color/Write"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_97"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginEnd="@dimen/dp_26"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/ller_a"
        android:gravity="center">


        <com.example.YunleHui.view.ClearEditText
            android:inputType="number"
            android:lines="1"
            android:id="@+id/edit_phone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="输入订单号码或后六位"
            android:textColor="@color/black33"
            android:textColorHighlight="@color/black33"
            android:textColorHint="@color/black33"
            android:textColorLink="@color/black33"
            android:textSize="@dimen/sp_16" />

        <View
            android:background="#707070"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_16"/>

        <TextView
            android:id="@+id/text_ma_search"
            android:textStyle="bold"
            android:clickable="true"
android:gravity="center"
            android:layout_width="@dimen/dp_63"
            android:layout_height="match_parent"
            android:text="搜索"
            android:textColor="@color/login"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>












<LinearLayout

    android:background="@color/all_background"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">


</LinearLayout>






</LinearLayout>
