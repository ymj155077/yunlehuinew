                android:id="@+id/img_head"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:scaleType="fitXY"
                android:src="@drawable/timg"
                app:riv_corner_radius="@dimen/dp_10"
                app:riv_mutate_background="true" />


            <TextView
