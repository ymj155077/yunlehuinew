                            android:textSize="@dimen/sp_16" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_weight="1">


                            <TextView
