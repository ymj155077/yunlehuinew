                        android:textColor="@color/corlor_text"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/corlor_text"
                        android:textSize="@dimen/sp_16" />

