<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/Write"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.act.actme.actbusiness.ActShopCom">


    <include layout="@layout/toolbar_push_off"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_12"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/head_round_me"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/timg"
            app:riv_border_color="#333333"
            app:riv_corner_radius="30dp"
            app:riv_mutate_background="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="皮皮秀"
                android:textColor="@color/item_ti"
                android:textSize="@dimen/ts_13" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="评分："
                    android:textSize="10sp" />


                <RatingBar
                    android:id="@+id/rb_bar"
                    style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressTint="@color/color_title"
                    android:rating="4"
                    android:secondaryProgressTint="@color/color_title"
                    android:stepSize="1" />


                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="2018-01-12"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginBottom="@dimen/dp_7"
        android:lineSpacingExtra="@dimen/dp_3"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/black33"
        android:id="@+id/text_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:text="困了就睡大立科技萨拉肯德基萨拉肯德基撒来得及萨拉肯德基萨拉肯德基" />

    <com.example.YunleHui.view.Nine.TNinePlaceGridView
        android:id="@+id/ninePlaceGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userInfoSuperView"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="10dp" />


    <View
        android:background="@color/all_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"/>


    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:background="@drawable/batails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/edit_context"
            android:textSize="@dimen/sp_17"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginStart="@dimen/dp_6"
            android:hint="感谢你的光临，及对我们店的支持我们将会 努力把服务做到最好"
            android:background="@null"
            android:minHeight="@dimen/dp_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


<View
    android:layout_weight="1"
    android:layout_width="@dimen/dp_1"
    android:layout_height="0dp"/>

    <TextView

        android:layout_marginBottom="@dimen/dp_22"
        android:textSize="@dimen/sp_17"
        android:gravity="center"
        android:textColor="@color/Write"
        android:text="发送回复"
        android:clickable="true"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:id="@+id/text_send"
        android:background="@drawable/button_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44" />




</LinearLayout>